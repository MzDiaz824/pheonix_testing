// credit: https://github.com/nf-core/mag/blob/dev/modules/local/busco.nf

process BUSCO_DB {
    tag "${database.baseName}"

    conda (params.enable_conda ? "conda-forge::sed=4.7" : null)
    container "${ workflow.containerEngine == 'singularity' && !task.ext.singularity_pull_docker_container ?
        'https://containers.biocontainers.pro/s3/SingImgsRepo/biocontainers/v1.2.0_cv1/biocontainers_v1.2.0_cv1.img' :
        'biocontainers/biocontainers:v1.2.0_cv1' }"

    input:
    path database

    output:
    path "buscodb/*"    , emit: db
    path database       , emit: database
    path "versions.yml" , emit: versions

    script:
    """
    mkdir buscodb
    tar -xf ${database} -C buscodb

    cat <<-END_VERSIONS > versions.yml
    "${task.process}":
        tar: \$(tar --version 2>&1 | sed -n 1p | sed 's/tar (GNU tar) //')
    END_VERSIONS
    """
}